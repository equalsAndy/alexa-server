{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Alexa Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/server.js",
            "env": {
                "PORT": "3000",
                "OAUTH_CLIENT_ID": "alexa-client",
                "OAUTH_CLIENT_SECRET": "alexa-secret"
            },
            "console": "integratedTerminal"
        }
    ]
}